<% include ./partials/header.ejs %>

<div class="w-full h-screen bg-gradient-to-r from-indigo-900 via-blue-500 to-cyan-400 flex items-center justify-center">
  <div class="w-72 h-90 bg-zinc-100 p-6 rounded-lg shadow-lg">
    <h2 class="text-xl text-center font-semibold mb-4">Welcome</h2>
    <form action="/" method="POST" class="mb-4">
      <div class="mb-4">
        <label for="email" class="block font-semibold mb-1">Email</label>
        <input type="email" id="email" name="email" class="w-full px-3 py-2 border rounded-lg">
      </div>
      <div class="mb-4">
        <label for="password" class="block font-semibold mb-1">Password</label>
        <input type="password" id="password" name="password" class="w-full px-3 py-2 border rounded-lg">
      </div>
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">Login</button>
    </form>
    <a href="#" class="text-blue-500">Forgot password?</a>
    <p class="text-sm">Don't have an account? <a href="/register" class="text-blue-500">Register here</a></p>
  </div>
</div>

