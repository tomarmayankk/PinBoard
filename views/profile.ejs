<% include ./partials/header.ejs %>
<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
    <form id="uploadform" hidden action="/fileupload">
        <input type="file" name = "image">
    </form>
    <div class="profdets flex flex-col items-center mt-20">
        <div class="relative">
            <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center bg-red-700 justify-center">
                <i class="ri-pencil-line"></i>
            </span>
            <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">
                <img class = "w-full h-full object-cover" src="https://cc-prod.scene7.com/is/image/CCProdAuthor/photo-to-cartoon_P1_900x420?$pjpeg$&jpegSize=200&wid=900">
            </div>
        </div>
            <h1 class="text-3xl font-semibold mt-5">Mayank</h1>
            <h3>@username</h3>
            <a href="/edit" class="mt-5 px-7 py-2 bg-zinc-700 font-semibold text-xs rounded-full">Edit</a>
            <button class="mt-5 px-7 py-2 bg-red-700 text-xs font-semibold mt-10 rounded-full">Add Post</button>
    </div>
    <div class="cards flex flex-wrap gap-10 px-10 mt-10">
        <div class="card">
            <div class="w-52 h-40 bg-zinc-200 rounded-lg"></div>
            <h3 class="text-xl font-semibold mt-3">All Pins</h3>
            <h5 class="text-sm font-medium opacity-60">28 Pins</h5>
        </div>
    </div>
</div>
<script>
    document.querySelector('#uploadicon').addEventListener('click', function () {
        document.querySelector('#uploadform input').click();
    });
</script>
